    </nav>

    <section class="clearfix">
      <ul>
        <% files.each do |file| %>
          <li class="entry">
            <a href="<%= "#{file.path}" %>">
              <span class="icon">
                <img src="/guideemup/icons/<%= file.icon %>.png" />
              </span>
              <span class="label"><%= file.name %></span>
            </a>
          </li>
        <% end %>
      </ul>
    </section>
  </body>
